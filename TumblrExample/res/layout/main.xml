<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

        <EditText android:id="@+id/blogname"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:hint="Place the name of your blog here"/>

        <EditText android:id="@+id/posttitle"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:hint="Place post title here"/>

        <EditText android:id="@+id/post"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:hint="Place post body here"/>

	    <Button android:id="@+id/btn_post"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Post"/>
	            
	    <Button android:id="@+id/loginorout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""/>
	            
	    <TextView android:id="@+id/debug_status"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text=""
	              android:textColor="#FFFFFF"/>
	            
</LinearLayout>
